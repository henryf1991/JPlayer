<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View 
        android:id="@+id/groupDividerAbove"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/child_dividercolor"/>

	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/child_background">
	    <LinearLayout 
	        android:id="@+id/childHeaderShufffle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal">
		        <ImageView 
			        android:layout_width="40dp"
			        android:layout_height="40dp"
			        android:scaleType="fitXY"
			        android:layout_marginRight="5dp"
			        android:layout_gravity="center"
			        android:src="@drawable/ic_player_shuffle"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="15sp"
		            android:textColor="@color/player_child_textColor"
		            android:layout_gravity="center"
		            android:text="@string/shuffle"/>
	    </LinearLayout>
	</RelativeLayout>

</LinearLayout>